@model StokTakip.Entities.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Giriş</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="h-100 d-flex align-items-center">
    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col-md-12 border shadow p-5">
                <h4>Kullanıcı Giriş</h4>
                <hr />
                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KullaniciSifre" class="control-label"></label>
                        <input asp-for="KullaniciSifre" class="form-control" required />
                        <span asp-validation-for="KullaniciSifre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Giriş" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
